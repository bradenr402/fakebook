<%= turbo_stream.append 'all-users' do %>
  <% @users.each do |user| %>
    <%= render 'user_link', user: user %>
  <% end %>
<% end %>

<% if @next_page.present? %>
    <%= turbo_stream.replace "load_more" do %>
        <%= turbo_frame_tag "load_more", src: users_path(page: @next_page, format: :turbo_stream), loading: :lazy %>
    <% end %>
<% end %>
