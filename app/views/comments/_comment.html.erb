<div class="post-frame">
  <div class="flex items-center">
    <div>
      <% if comment.user.avatar.attached? %>
        <%= link_to image_tag(comment.user.avatar, class: 'h-12 w-12 mr-3 align-middle object-cover rounded-full border-2 border-blue-500 dark:border-blue-500 shadow-lg'), comment.user %>
      <% else %>
        <%= link_to image_tag('default-avatar.png', class: 'h-12 w-12 mr-3 align-middle object-cover rounded-full border-2 border-blue-500 dark:border-blue-500 shadow-lg'), comment.user %>
      <% end %>
    </div>
    <div>
      <div class="mt-2 flex-col gap-3 text-md leading-tight">
        <%= link_to comment.user.name, comment.user, class: '' %>
      </div>
      <span class="text-blue-600 dark:text-blue-500 text-xs">
        <%= formatted_datetime(comment.created_at) %>
      </span>
    </div>
  </div>
  <div class="my-5 mx-4">
    <span class=""><%= comment.body %></span>
  </div>
  <div>
    <%= render 'shared/like_button', likeable: comment %>
  </div>
</div>
