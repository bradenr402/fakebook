<div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-full">
  <h1 class="font-bold text-center mb-4 text-3xl text-blue-500">Sign Up</h1>

  <div data-controller="validate-password-match" class="bg-white dark:bg-slate-800 text-slate-600 dark:text-slate-300 border border-zinc-800 border-opacity-10 p-8 drop-shadow-xl rounded-lg ml-auto mr-auto w-2/5 max-w-96 min-w-80">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-4">
        <%= f.label :name, 'Username', class: '' %>
        <%= f.text_field :name, placeholder: 'Username', class: 'dark:bg-slate-700 dark:bg-opacity-75 default-transition block px-2.5 pb-2.5 pt-4 w-full text-sm bg-transparent rounded-md border border-zinc-800 border-opacity-15 focus:ring-1 focus:ring-blue-500' %>
        <p class="hidden peer-focus:hidden peer-invalid:block text-red-500 text-xs mt-1">Username is invalid.</p>
      </div>

      <div class="field mb-4">
        <%= f.label :email, 'Email address', class: '' %>
        <%= f.email_field :email, autocomplete: "email", placeholder: 'Email address', pattern: '^[a-z0-9._\-]+@[a-z0-9.\-]+\.[a-z]{2,4}$', class: 'peer dark:bg-slate-700 dark:bg-opacity-75 default-transition block px-2.5 pb-2.5 pt-4 w-full text-sm bg-transparent rounded-md border border-zinc-800 border-opacity-15 focus:ring-1 focus:ring-blue-500 invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-500 invalid:[&:not(:placeholder-shown):not(:focus)]:bg-red-900 invalid:[&:not(:placeholder-shown):not(:focus)]:bg-opacity-25 valid:[&:not(:placeholder-shown):not(:focus)]:border-green-500 valid:[&:not(:placeholder-shown):not(:focus)]:bg-green-900 valid:[&:not(:placeholder-shown):not(:focus)]:bg-opacity-25' %>
        <p class="hidden peer-focus:hidden peer-invalid:block text-red-500 text-xs mt-1">Please type a valid email address.</p>
      </div>

      <div class="field mb-4">
        <%= f.label :password, class: 'sr-only' %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', data: { action: 'input->validate-password-match#validateMatch', validate_password_match_target: 'passwordField' }, pattern: ".{6,}", class: 'peer dark:bg-slate-700 dark:bg-opacity-75 default-transition block px-2.5 pb-2.5 pt-4 w-full text-sm bg-transparent rounded-md border border-zinc-800 border-opacity-15 focus:ring-1 focus:border-blue-500 invalid:[&:not(:placeholder-shown):not(:focus)]:border-red-500 invalid:[&:not(:placeholder-shown):not(:focus)]:bg-red-900 invalid:[&:not(:placeholder-shown):not(:focus)]:bg-opacity-25 valid:[&:not(:placeholder-shown):not(:focus)]:border-green-500 valid:[&:not(:placeholder-shown):not(:focus)]:bg-green-900 valid:[&:not(:placeholder-shown):not(:focus)]:bg-opacity-25' %>
        <p class="hidden peer-focus:hidden peer-invalid:block text-red-500 text-xs mt-1">Password must be at least 6 characters.</p>
      </div>

      <div class="field mb-4">
        <%= f.label :password_confirmation, class: 'sr-only' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm Password', data: { action: 'blur->validate-password-match#validateMatch focus->validate-password-match#hideErrorMessage focus->validate-password-match#resetStyles', validate_password_match_target: 'confirmationField' }, class: 'peer dark:bg-slate-700 dark:bg-opacity-75 default-transition block px-2.5 pb-2.5 pt-4 w-full text-sm bg-transparent rounded-md border border-zinc-800 border-opacity-15 focus:ring-1 focus:border-blue-500' %>
        <p class="hidden peer-focus:hidden text-red-500 text-xs mt-1" data-validate-password-match-target="errorMessage">Password does not match.</p>
      </div>

      <div class="actions">
        <%= f.submit "Create Account", class: 'btn-primary bg-blue-600 hover:bg-blue-500 focus:bg-blue-500 text-gray-50 font-medium rounded-md w-full px-2.5 py-2.5 mb-4 focus:ring-blue-500 focus:ring-2 outline-none border-2 border-transparent focus:border-white' %>
      </div>

    <% end %>
    <%= render "devise/shared/links" %>

  </div>
</div>
