<% if user.avatar.attached? %>
  <%= link_to image_tag(user.avatar, class: 'h-12 w-12 mr-3 align-middle object-cover rounded-full border-2 border-blue-500 dark:border-blue-500 shadow-md', data: { turbo_frame: '_top' }), user, data: { turbo_frame: '_top' } %>
<% else %>
  <%= link_to image_tag('default-avatar.png', class: 'h-12 w-12 mr-3 align-middle object-cover rounded-full border-2 border-blue-500 dark:border-blue-500 shadow-md', data: { turbo_frame: '_top' }), user, data: { turbo_frame: '_top' } %>
<% end %>
