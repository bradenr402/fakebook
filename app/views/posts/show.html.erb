<h3><%= @post.user.name %></h3>
<p><%= @post.body %></p>

<% if current_user == @post.user %>
<ul>
  <li><%= link_to 'Edit', edit_post_path(@post) %></li>
  <li><%= link_to 'Delete', post_path(@post), data:
  {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>
<% end %>

<h3>Comments</h3>
<%= render @post.comments %>

<%= render 'comments/form' %>
