<p><%= notice %></p>

<div id="posts-show">
  <%= render @post %>
</div>

<% if @post.user == current_user %>
<div>
  <%= link_to 'Edit this post', edit_post_path(@post) %>
  <%= link_to 'Delete this post', post_path(@post), data:
  {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
</div>
<% end %>

<h3>Comments</h3>
<ul>
  <%= render @post.comments %>
</ul>

<%= render 'comments/form' %>
