<%= turbo_stream.append 'posts' do %>
  <% @posts.each do |post| %>
    <%= render 'post_link', post: post %>
  <% end %>
<% end %>

<% if @next_page.present? %>
    <%= turbo_stream.replace "load_more" do %>
        <%= turbo_frame_tag "load_more", src: posts_path(page: @next_page, format: :turbo_stream), loading: :lazy %>
    <% end %>
<% end %>
