<div class="post">
  <div class="frame">
    <div class="username">
      <%= link_to post.user.name, post.user, class: 'username' %>
    </div>
    <%= link_to post, class: 'post-link' do %>
      <div class="body">
        <%= post.body.truncate(70) %>
      </div>
    <% end %>
    <div class="like-btn">
      <%= render partial: 'likes/button', locals: { likeable: post } %>
    </div>
    <div class="posted-time">
      <span class="timestamp"><%= formatted_datetime(post.created_at) %></span>
    </div>
  </div>
</div>
